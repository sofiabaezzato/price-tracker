{
	"$schema": "https://biomejs.dev/schemas/1.5.2/schema.json",
	"organizeImports": {
		"enabled": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true
		},
		"ignore": [
			"node_modules/",
			"./**/*.json",
			"tailwind.config.js",
			"next.config.mjs",
			".next/"
		]
	},
	"formatter": {
		"enabled": true,
		"formatWithErrors": false,
		"indentStyle": "tab",
		"indentWidth": 2,
		"lineWidth": 80,
		"lineEnding": "lf",
		"ignore": [
			"node_modules/",
			"./**/*.json",
			"tailwind.config.js",
			"next.config.mjs",
			".next/"
		]
	}
}
